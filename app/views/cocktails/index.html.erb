<h1>Liste des cocktails</h1>

<div class="container-fluid">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="card col-sm-6 col-lg-3 flex-grow">
        <h5 class="card-title"><%= cocktail.name %></h5>
        <%= link_to ">", cocktail_path(cocktail.id) %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "+ Add", new_cocktail_path, id: 'add-button' %>
