<h1> <%= @cocktail.name %></h1>
<%= link_to "Back to list", cocktails_path %>

<div class="container">
  <ul>
    <% @doses.each do |dose| %>
    <li><%= dose.ingredient.name %> <%= dose.description %></li>
    <% end %>
  </ul>

  <div>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :description %>
    <%= f.button :submit, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
